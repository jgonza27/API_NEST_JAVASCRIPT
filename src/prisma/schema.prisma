generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Department {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  phone String
  email String?

  Employee Employee[]
}

model Employee {
  DNI           String @id
  name          String
  login         String @unique
  password      String
  department_id Int

  departament Department @relation(fields: [department_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
}
